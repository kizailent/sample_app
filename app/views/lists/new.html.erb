<h1>新規投稿</h1>

<% if @list.errors.any? %>
  <%= @list.errors.count %>件のエラーが発生しました
  <ul>
    <% @list.errors.full_messages.each do |messages| %>
      <li><%= messages %></li>
    <% end %>
  </ul>
<% end %>

<!-- form_withメソッドを使って、フォームを作成 -->
<%= form_with model: @list,url: '/lists', method: :post   do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.file_field :image, accept: "image/*" %>
  
  <%= f.submit '投稿' %>

<% end %>